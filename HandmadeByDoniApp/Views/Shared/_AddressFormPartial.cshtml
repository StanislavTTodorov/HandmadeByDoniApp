@model AddressFormModel
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="CountryName"></label>
                <input asp-for="CountryName" class="form-control" placeholder="Name...">
                <span asp-validation-for="CountryName" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CityName"></label>
                <input asp-for="CityName" class="form-control" placeholder="Name...">
                <span asp-validation-for="CityName" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Street"></label>
                <input asp-for="Street" class="form-control" placeholder="Name...">
                <span asp-validation-for="Street" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number...">
                <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
            </div>
                <div class="form-group">
                <label asp-for="DeliveryCompanyId"></label>
                <select asp-for="DeliveryCompanyId" class="form-control">
                        @foreach (var delivery in Model.DeliveryCompanies)
                        {
                        <option value="@delivery.Id">@delivery.Name</option>
                        }
                    </select>
                <span asp-validation-for="DeliveryCompanyId" class="small text-danger"></span>
                </div>
            <div class="form-group">
                <label asp-for="MethodPaymentId"></label>
                <select asp-for="MethodPaymentId" class="form-control">
                    @foreach (var method in Model.MethodPayments)
                    {
                        <option value="@method.Id">@method.Method</option>
                    }
                </select>
                <span asp-validation-for="MethodPaymentId" class="small text-danger"></span>
            </div>
                <div class="text-center">
                    <input class="btn btn-primary mt-3" type="submit" value="Save" />
                </div>
        </form>
    </div>
</div>
