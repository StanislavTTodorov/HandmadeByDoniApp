    <li class="nav-item">
            <a class="button-memu" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
            <a class="nav-link button-memu" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>*/
}

